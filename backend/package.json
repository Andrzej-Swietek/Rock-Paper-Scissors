{
  "name": "the_rock_paper_scissors",
  "version": "1.0.0",
  "description": "Websocket Microservice for Rock Paper Scissors game",
  "main": "index.js",
  "author": "Andrzej Swietek",
  "license": "All Rights Reserved",
  "private": true,
  "scripts": {
    "start": "npm run build && cross-env NODE_ENV=production node dist/server.js",
    "dev": "cross-env NODE_ENV=development nodemon src/server.ts",
    "build": "swc src -d dist --source-maps --copy-files",
    "build:tsc": "tsc && tsc-alias",
    "test": "jest --forceExit --detectOpenHandles",
    "lint": "eslint --ignore-path .gitignore --ext .ts src/",
    "lint:fix": "npm run lint -- --fix",
    "deploy:prod": "npm run build && pm2 start ecosystem.config.js --only prod",
    "deploy:dev": "pm2 start ecosystem.config.js --only dev"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^10.0.0",
    "envalid": "^7.3.1",
    "express": "^4.18.2",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "passport": "^0.6.0",
    "passport-http-oauth": "^0.1.3",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "passport-oauth": "^1.0.0",
    "redis": "^4.6.7",
    "socket.io": "^4.7.0",
    "socket.io-redis": "^6.1.1",
    "socket.io-redis-adapter": "^8.4.6",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "winston": "^3.9.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.51",
    "@swc/core": "^1.2.108",
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.11",
    "@types/express": "^4.17.13",
    "@types/hpp": "^0.2.1",
    "@types/jest": "27.4.x",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/node": "^16.0.1",
    "@types/passport-jwt": "^3.0.6",
    "@types/redis": "^4.0.11",
    "@types/socket.io-redis": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "cross-env": "^7.0.3",
    "jest": "27.4.x",
    "lint-staged": "^11.0.0",
    "node-config": "^0.0.2",
    "node-gyp": "^8.1.0",
    "nodemon": "^2.0.9",
    "pm2": "^5.1.0",
    "prettier": "^2.3.2",
    "prisma": "^5.7.0",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.4.0",
    "tsc-alias": "^1.4.1",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.5.2"
  }
}
